{
  "name": "micro-github-latest",
  "version": "1.3.0",
  "description": "Microservice for downloading the latest asset of GitHub release.",
  "license": "MIT",
  "repository": "evenchange4/micro-github-latest",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "bugs": {
    "url": "https://github.com/evenchange4/micro-github-latest/issues",
    "email": "evenchange4@gmail.com"
  },
  "homepage": "https://github.com/evenchange4/micro-github-latest#readme",
  "bin": "bin/server.js",
  "files": [
    "src",
    "bin"
  ],
  "engineStrict": true,
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "start": "micro src/index.js",
    "dev": "DEBUG=* micro-dev src/index.js",
    "pkg": "rm -rf pkg && pkg . --out-path pkg",
    "eslint": "eslint ./",
    "format": "prettier --write '{src,bin}/**/*.js'",
    "test": "NODE_ENV='test' TZ='UTC' jest --coverage --runInBand",
    "test:watch": "npm run test -- --watch"
  },
  "now": {
    "alias": "micro-github-latest",
    "type": "npm",
    "env": {
      "NODE_ENV": "production"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/coverage/",
      "<rootDir>/pkg/"
    ]
  },
  "dependencies": {
    "debug": "^3.0.1",
    "github": "^11.0.0",
    "micro": "^9.0.0",
    "micro-compress": "^1.0.0",
    "micro-cors": "^0.0.4",
    "microrouter": "^2.2.3",
    "ramda": "^0.24.1",
    "update-notifier": "^2.2.0",
    "yargs": "^9.0.1"
  },
  "devDependencies": {
    "await-url": "^0.3.0",
    "babel-eslint": "^8.0.0",
    "codecov": "^2.3.0",
    "eslint": "^4.7.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.5.0",
    "eslint-config-react-app": "^2.0.0",
    "eslint-plugin-flowtype": "^2.35.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.1.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.3.0",
    "jest": "^21.1.0",
    "micro-dev": "^1.2.3",
    "now": "^8.3.4",
    "pkg": "^4.2.4",
    "prettier": "^1.7.0",
    "request-promise": "^4.2.1",
    "test-listen": "^1.0.2"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "react-app",
      "airbnb",
      "prettier",
      "prettier/flowtype",
      "prettier/react",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ],
      "import/no-extraneous-dependencies": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "react/forbid-prop-types": 0,
      "react/require-default-props": 0,
      "prettier/prettier": "error"
    }
  }
}
